{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}

{% block update %}
    <turbo-stream action="update" target="player_health_{{ player_id }}">
        <template>
            {{ component('Health:Bar', {health: health}) }}
        </template>
    </turbo-stream>
{% endblock %}
