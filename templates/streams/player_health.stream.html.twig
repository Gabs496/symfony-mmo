{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}

{% block update %}
    <turbo-stream action="update" target="player_health_{{ player.id }}" method="morph">
        <template>
            {{ component('HealthBar', {gameObject: player.gameObject}) }}
        </template>
    </turbo-stream>
{% endblock %}
