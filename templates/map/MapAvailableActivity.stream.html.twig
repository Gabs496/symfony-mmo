{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
    <turbo-stream action="append" target="map_available_activities">
        <template>
            <div id="map_available_activity_{{ id }}" class="animate__animated animate__zoomIn animate__faster">
                {% include 'map/map_available_activity.html.twig' %}
            </div>
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="update" target="map_available_activity_{{ id }}">
        <template>
            {% include 'map/map_available_activity.html.twig' %}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="map_available_activity_{{ id }}">
        <template></template>
    </turbo-stream>
{% endblock %}
