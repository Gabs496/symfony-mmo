{% set secondsToFinish = entity.secondsToFinish %}
{% if secondsToFinish is not null %}
    <div class="progress">
        <div class="progress-bar bg-primary animate__animated animate__slideInLeft" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%; animation-duration: {{ secondsToFinish }}s; animation-timing-function: linear;"></div>
    </div>
{% endif %}
