{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}

{% block update %}
    <turbo-stream action="update" target="player_health_{{ player.id }}">
        <template>
            {% include 'parts/progressBar.html.twig' with {percentage: player.currentHealth, bg: 'bg-danger'} %}
        </template>
    </turbo-stream>
{% endblock %}
